<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityPodMenu"
    android:orientation="vertical">

    <Button
        android:id="@+id/FirstButtonSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/white"
        android:onClick="ChangeFragment"
        android:padding="20dp"
        android:textStyle="bold"
        android:text="Monoblock"
        android:textAllCaps="false"
        android:textColor="#039BE5"
        android:textSize="24sp"
        android:maxWidth="100dp"
        android:maxHeight="80dp"/>
    <Button
        android:id="@+id/SecondButtonSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@android:color/white"
        android:onClick="ChangeFragment"
        android:textStyle="bold"
        android:padding="20dp"
        android:text="2 Channel"
        android:textAllCaps="false"
        android:textColor="#039BE5"
        android:textSize="24sp" />

    <Button
        android:id="@+id/ThirdButtonSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@android:color/white"
        android:textStyle="bold"
        android:onClick="ChangeFragment"
        android:padding="20dp"
        android:text="4 Channel"
        android:textAllCaps="false"
        android:textColor="#039BE5"
        android:textSize="24sp" />

    <Button
        android:id="@+id/FourthButtonSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@android:color/white"
        android:textStyle="bold"
        android:onClick="ChangeFragment"
        android:padding="20dp"
        android:text="5 Channel"
        android:textAllCaps="false"
        android:textColor="#039BE5"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Choose your desired amp type."
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />
</LinearLayout>