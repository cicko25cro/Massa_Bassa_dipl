<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityPodMenu"
    android:orientation="vertical">

    <Button
        android:id="@+id/FirstButtonSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/white"
        android:onClick="ChangeFragment"
        android:padding="20dp"
        android:text="Subwoofers"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#039BE5"
        android:textSize="24sp"
        android:maxWidth="100dp"
        android:maxHeight="80dp"/>
    <Button
        android:id="@+id/SecondButtonSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@android:color/white"
        android:onClick="ChangeFragment"
        android:padding="20dp"
        android:textStyle="bold"
        android:text="Amplifiers"
        android:textAllCaps="false"
        android:textColor="#039BE5"
        android:textSize="24sp" />

    <Button
        android:id="@+id/ThirdButtonSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@android:color/white"
        android:onClick="ChangeFragment"
        android:padding="20dp"
        android:text="Loudspeakers"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#039BE5"
        android:textSize="24sp" />

    <Button
        android:id="@+id/FourthButtonSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@android:color/white"
        android:onClick="ChangeFragment"
        android:padding="20dp"
        android:text="Components And Coaxials"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#039BE5"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:text="Discover the best audio products of 2024 handpicked for you by Us. From speakers, amplifiers to subwoofers, find top-notch quality and performance for the most reasonable price!"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />
</LinearLayout>