<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bassTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bass"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"/>

    <SeekBar
        android:id="@+id/lowSeekBar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:max="99"
        android:min="0"
        android:layout_marginTop="24dp"
        android:layout_below="@id/bassTitle"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/lowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lowSeekBar"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Low Frequency: 1Hz"/>

    <Button
        android:id="@+id/lowStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lowText"
        android:layout_marginTop="32dp"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Start"/>

    <Button
        android:id="@+id/lowStopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lowText"
        android:layout_marginTop="32dp"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Stop"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lowStopButton"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/midTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mid"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_below="@id/divider1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <SeekBar
        android:id="@+id/midSeekBar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:max="75"
        android:min="0"
        android:layout_marginTop="30dp"
        android:layout_below="@id/midTitle"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/midText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/midSeekBar"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Mid Frequency: 250Hz"/>

    <Button
        android:id="@+id/midStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/midText"
        android:layout_marginTop="32dp"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Start"/>

    <Button
        android:id="@+id/midStopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/midText"
        android:layout_marginTop="32dp"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Stop"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/midStopButton"
        android:layout_marginTop="30dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/highTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_below="@id/divider2"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>


    <SeekBar
        android:id="@+id/highSeekBar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:max="85"
        android:min="0"
        android:layout_marginTop="16dp"
        android:layout_below="@id/highTitle"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/highText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/highSeekBar"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="High Frequency: 1500Hz"/>

    <Button
        android:id="@+id/highStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/highText"
        android:layout_marginTop="32dp"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Start"/>

    <Button
        android:id="@+id/highStopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/highText"
        android:layout_marginTop="32dp"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Stop"/>

    <TextView
        android:id="@+id/AboutFreqGenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/highStopButton"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:text="Frequency Generator allows the generation of bass, mid and high sound frequencies. Use this tool for speaker testing, audio research, or educational purposes. Simply set the desired frequency and press the PLAY button or press STOP when you are done."/>

</RelativeLayout>
