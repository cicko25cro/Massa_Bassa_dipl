<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorSelection"
    android:orientation="vertical">
    <Button
        android:id="@+id/FirstOptionSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/white"
        android:onClick="ChangeFragment"
        android:padding="20dp"
        android:text="Amp Power Calculator"
        android:textAllCaps="false"
        android:textColor="#039BE5"
        android:textSize="24sp"
        android:maxWidth="100dp"
        android:maxHeight="80dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/SecondOptionSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@android:color/white"
        android:onClick="ChangeFragment"
        android:padding="20dp"
        android:text="Mids And Highs"
        android:textAllCaps="false"
        android:textColor="#039BE5"
        android:textSize="24sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/ThirdOptionSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@android:color/white"
        android:padding="20dp"
        android:text="Cone Area Calculator"
        android:textAllCaps="false"
        android:textColor="#039BE5"
        android:textSize="24sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/FourthOptionSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@android:color/white"
        android:padding="20dp"
        android:text="Subwoofer Wiring Calculator"
        android:textAllCaps="false"
        android:textColor="#039BE5"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/displayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:text="Need to calculate speaker impedance, amplifier power, or cone area? Choose from any of the calculators above for quick and accurate results." />
</LinearLayout>